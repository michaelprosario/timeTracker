@model TimeTracker.Web.Models.UpdateProjectViewModel
@{
    ViewData["Title"] = "Edit Project";
}

<div class="container mt-4">
    <h1>Edit Project</h1>
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <input type="hidden" asp-for="Code" />
                
                <div class="mb-3">
                    <label class="form-label">Project Code</label>
                    <input value="@Model.Code" class="form-control" disabled />
                    <small class="form-text text-muted">Code cannot be changed.</small>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Project Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="mb-3 form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
                
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
