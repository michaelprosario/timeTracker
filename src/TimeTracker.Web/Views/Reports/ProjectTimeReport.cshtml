@model TimeTracker.Web.Models.ProjectTimeReportViewModel
@{
    ViewData["Title"] = "Project Time Report";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2>Project Time Report</h2>
            <p class="text-muted">View time spent on each project by time sheet period</p>
        </div>
    </div>

    @if (!Model.TimeSheets.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No time entries found. Start by creating a time sheet and adding time entries.
        </div>
    }
    else
    {
        @foreach (var timeSheet in Model.TimeSheets)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">
                                Time Sheet: @timeSheet.StartDate.ToString("MM/dd/yyyy") - @timeSheet.EndDate.ToString("MM/dd/yyyy")
                            </h5>
                            <small>Week Ending: @timeSheet.EndDate.ToString("MM/dd/yyyy")</small>
                        </div>
                        <div class="text-end">
                            <span class="badge @(timeSheet.Status == "Open" ? "bg-success" : "bg-secondary")">
                                @timeSheet.Status
                            </span>
                            <h5 class="mb-0 mt-2">Total: @timeSheet.TotalHours.ToString("F2") hrs</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (!timeSheet.Projects.Any())
                    {
                        <p class="text-muted">No time entries for this period.</p>
                    }
                    else
                    {
                        @foreach (var project in timeSheet.Projects)
                        {
                            <div class="project-section mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="text-primary mb-0">
                                        <i class="bi bi-folder"></i> @project.ProjectName
                                        <small class="text-muted">(@project.ProjectCode)</small>
                                    </h6>
                                    <span class="badge bg-info">@project.TotalHours.ToString("F2") hrs</span>
                                </div>
                                
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Date</th>
                                                <th>Work Type</th>
                                                <th>Hours</th>
                                                <th>Notes</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var entry in project.TimeEntries)
                                            {
                                                <tr>
                                                    <td>@entry.EntryDate.ToString("MM/dd/yyyy")</td>
                                                    <td>
                                                        @entry.WorkTypeName
                                                        <small class="text-muted">(@entry.WorkTypeCode)</small>
                                                    </td>
                                                    <td>@entry.Hours.ToString("F2")</td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(entry.Notes))
                                                        {
                                                            <small>@entry.Notes</small>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted">-</small>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot class="table-light">
                                            <tr>
                                                <td colspan="2" class="text-end"><strong>Subtotal:</strong></td>
                                                <td><strong>@project.TotalHours.ToString("F2")</strong></td>
                                                <td></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                            
                            @if (project != timeSheet.Projects.Last())
                            {
                                <hr />
                            }
                        }
                    }
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="TimeSheet" asp-action="Details" asp-route-id="@timeSheet.TimeSheetId" 
                       class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i> View Time Sheet
                    </a>
                </div>
            </div>
        }
    }
    
    <div class="row mt-4">
        <div class="col">
            <a asp-controller="TimeSheet" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Time Sheets
            </a>
            <button class="btn btn-outline-secondary" onclick="window.print()">
                <i class="bi bi-printer"></i> Print Report
            </button>
        </div>
    </div>
</div>

<style>
    .project-section {
        border-left: 3px solid #0d6efd;
        padding-left: 15px;
    }
    
    @@media print {
        .btn, .navbar, footer {
            display: none !important;
        }
        
        .card {
            page-break-inside: avoid;
            box-shadow: none !important;
            border: 1px solid #dee2e6 !important;
        }
        
        .project-section {
            page-break-inside: avoid;
        }
    }
</style>
