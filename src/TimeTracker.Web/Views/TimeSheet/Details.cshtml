@model TimeTracker.Web.Models.TimeSheetDetailsViewModel
@{
    ViewData["Title"] = "Timesheet Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Timesheet Details</h1>
            <p class="text-muted">
                Period: @Model.TimeSheet.StartDate.ToString("MMM dd") - @Model.TimeSheet.EndDate.ToString("MMM dd, yyyy")
            </p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-1" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                </svg>
                Back to List
            </a>
        </div>
    </div>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- Timesheet Summary Card -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <h6 class="text-muted">Status</h6>
                    @if (Model.TimeSheet.Status == "Open")
                    {
                        <span class="badge bg-success fs-6">Open</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">Closed</span>
                    }
                </div>
                <div class="col-md-3">
                    <h6 class="text-muted">Total Hours</h6>
                    <h4>@Model.TimeSheet.TotalHours.ToString("F2")</h4>
                </div>
                <div class="col-md-3">
                    <h6 class="text-muted">Entries</h6>
                    <h4>@Model.TimeEntries.Count</h4>
                </div>
                <div class="col-md-3 text-end">
                    @if (Model.TimeSheet.Status == "Open")
                    {
                        <form asp-action="CloseTimeSheet" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@Model.TimeSheet.Id" />
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to close this timesheet?');">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock me-1" viewBox="0 0 16 16">
                                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
                                </svg>
                                Close Timesheet
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Add New Entry Form (only if status is Open) -->
    @if (Model.TimeSheet.Status == "Open")
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                    </svg>
                    Add New Time Entry
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateEntry" method="post">
                    <input type="hidden" name="timeSheetId" value="@Model.TimeSheet.Id" />
                    <input type="hidden" name="StartTime" id="startTimeHidden" />
                    <input type="hidden" name="EndTime" id="endTimeHidden" />
                    
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Project</label>
                            <select name="ProjectCode" class="form-select" required>
                                <option value="">Select Project...</option>
                                @foreach (var project in Model.AvailableProjects)
                                {
                                    <option value="@project.Code">@project.Name (@project.Code)</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-md-3">
                            <label class="form-label">Work Type</label>
                            <select name="WorkTypeCode" class="form-select" required>
                                <option value="">Select Work Type...</option>
                                @foreach (var workType in Model.AvailableWorkTypes)
                                {
                                    <option value="@workType.Code">@workType.Name (@workType.Code)</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label">Date</label>
                            <input type="date" name="EntryDate" class="form-control" 
                                   value="@DateTime.Today.ToString("yyyy-MM-dd")" 
                                   min="@Model.TimeSheet.StartDate.ToString("yyyy-MM-dd")"
                                   max="@Model.TimeSheet.EndDate.ToString("yyyy-MM-dd")"
                                   required />
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label">Start Time</label>
                            <input type="time" id="startTime" class="form-control" value="09:00" required />
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label">End Time</label>
                            <input type="time" id="endTime" class="form-control" value="17:00" required />
                        </div>
                    </div>
                    
                    <div class="row g-3 mt-2">
                        <div class="col-md-2">
                            <label class="form-label">Calculated Hours</label>
                            <input type="text" id="calculatedHours" class="form-control" readonly value="8.00" />
                            <input type="hidden" name="Hours" id="hoursInput" value="8" />
                        </div>
                        
                        <div class="col-md-8">
                            <label class="form-label">Notes (Optional)</label>
                            <textarea name="Notes" class="form-control" placeholder="Additional details about this entry..."></textarea>
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg me-1" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
                                </svg>
                                Add Entry
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
    
    <!-- Time Entries List -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-ul me-2" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2"/>
                </svg>
                Time Entries
            </h5>
        </div>
        <div class="card-body">
            @if (Model.TimeEntries.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Project</th>
                                <th>Work Type</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Hours</th>
                                @if (Model.TimeSheet.Status == "Open")
                                {
                                    <th>Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.TimeEntries.OrderBy(e => e.EntryDate))
                            {
                                <tr id="entry-row-@entry.Id">
                                    <td>@entry.EntryDate.ToString("ddd, MMM dd")</td>
                                    <td>
                                        <span class="badge bg-info">@entry.ProjectCode</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@entry.WorkTypeCode</span>
                                    </td>
                                    <td>@(entry.StartTime.HasValue ? entry.StartTime.Value.ToString("HH:mm") : "-")</td>
                                    <td>@(entry.EndTime.HasValue ? entry.EndTime.Value.ToString("HH:mm") : "-")</td>
                                    <td><strong>@entry.Hours.ToString("F2")</strong></td>
                                    @if (Model.TimeSheet.Status == "Open")
                                    {
                                        <td>
                                            <button type="button" class="btn btn-sm btn-primary me-1 edit-entry-btn" 
                                                    data-id="@entry.Id" 
                                                    data-project="@entry.ProjectCode" 
                                                    data-worktype="@entry.WorkTypeCode" 
                                                    data-date="@entry.EntryDate.ToString("yyyy-MM-dd")" 
                                                    data-starttime="@(entry.StartTime.HasValue ? entry.StartTime.Value.ToString("HH:mm") : "")" 
                                                    data-endtime="@(entry.EndTime.HasValue ? entry.EndTime.Value.ToString("HH:mm") : "")" 
                                                    data-hours="@entry.Hours.ToString("F2")" 
                                                    data-notes="@entry.Notes">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                                                </svg>
                                                Edit
                                            </button>
                                            <form asp-action="DeleteEntry" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@entry.Id" />
                                                <input type="hidden" name="timeSheetId" value="@Model.TimeSheet.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this entry?');">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                                    </svg>
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="5" class="text-end"><strong>Total:</strong></td>
                                <td><strong>@Model.TimeEntries.Sum(e => e.Hours).ToString("F2")</strong></td>
                                <td colspan="@(Model.TimeSheet.Status == "Open" ? 1 : 0)"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-inbox text-muted mb-3" viewBox="0 0 16 16">
                        <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374z"/>
                    </svg>
                    <h5 class="text-muted">No time entries yet</h5>
                    <p class="text-muted">Add your first time entry using the form above.</p>
                </div>
            }
        </div>
    </div>
    
    <!-- Edit Time Entry Modal -->
    <div class="modal fade" id="editEntryModal" tabindex="-1" aria-labelledby="editEntryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="editEntryModalLabel">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil me-2" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
                        </svg>
                        Edit Time Entry
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="UpdateEntry" asp-route-timeSheetId="@Model.TimeSheet.Id" method="post">
                    <input type="hidden" name="Id" id="editEntryId" />
                    <input type="hidden" name="StartTime" id="editStartTimeHidden" />
                    <input type="hidden" name="EndTime" id="editEndTimeHidden" />
                    
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Project</label>
                                <select name="ProjectCode" id="editProjectCode" class="form-select" required>
                                    <option value="">Select Project...</option>
                                    @foreach (var project in Model.AvailableProjects)
                                    {
                                        <option value="@project.Code">@project.Name (@project.Code)</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Work Type</label>
                                <select name="WorkTypeCode" id="editWorkTypeCode" class="form-select" required>
                                    <option value="">Select Work Type...</option>
                                    @foreach (var workType in Model.AvailableWorkTypes)
                                    {
                                        <option value="@workType.Code">@workType.Name (@workType.Code)</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="col-md-4">
                                <label class="form-label">Date</label>
                                <input type="date" name="EntryDate" id="editEntryDate" class="form-control" 
                                       min="@Model.TimeSheet.StartDate.ToString("yyyy-MM-dd")"
                                       max="@Model.TimeSheet.EndDate.ToString("yyyy-MM-dd")"
                                       required />
                            </div>
                            
                            <div class="col-md-4">
                                <label class="form-label">Start Time</label>
                                <input type="time" id="editStartTime" class="form-control" required />
                            </div>
                            
                            <div class="col-md-4">
                                <label class="form-label">End Time</label>
                                <input type="time" id="editEndTime" class="form-control" required />
                            </div>
                            
                            <div class="col-md-12">
                                <label class="form-label">Calculated Hours</label>
                                <input type="text" id="editCalculatedHours" class="form-control" readonly />
                                <input type="hidden" name="Hours" id="editHoursInput" />
                            </div>
                            
                            <div class="col-md-12">
                                <label class="form-label">Notes (Optional)</label>
                                <textarea name="Notes" id="editNotes" class="form-control" rows="3" placeholder="Additional details about this entry..."></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg me-1" viewBox="0 0 16 16">
                                <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
                            </svg>
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Calculate hours based on start and end time
        function calculateHours() {
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            
            if (!startTime || !endTime) {
                return;
            }
            
            // Parse times
            const [startHour, startMinute] = startTime.split(':').map(Number);
            const [endHour, endMinute] = endTime.split(':').map(Number);
            
            // Convert to minutes since midnight
            const startMinutes = startHour * 60 + startMinute;
            let endMinutes = endHour * 60 + endMinute;
            
            // Handle overnight shifts (end time is next day)
            if (endMinutes < startMinutes) {
                endMinutes += 24 * 60;
            }
            
            // Calculate difference in hours
            const diffMinutes = endMinutes - startMinutes;
            const hours = diffMinutes / 60;
            
            // Update display and hidden input
            if (hours > 0 && hours <= 24) {
                document.getElementById('calculatedHours').value = hours.toFixed(2);
                document.getElementById('hoursInput').value = hours.toFixed(2);
            } else {
                document.getElementById('calculatedHours').value = '0.00';
                document.getElementById('hoursInput').value = '0';
            }
            
            // Update hidden fields with full datetime
            updateStartEndTimeHidden();
        }
        
        // Calculate hours for edit modal
        function calculateEditHours() {
            const startTime = document.getElementById('editStartTime').value;
            const endTime = document.getElementById('editEndTime').value;
            
            if (!startTime || !endTime) {
                return;
            }
            
            // Parse times
            const [startHour, startMinute] = startTime.split(':').map(Number);
            const [endHour, endMinute] = endTime.split(':').map(Number);
            
            // Convert to minutes since midnight
            const startMinutes = startHour * 60 + startMinute;
            let endMinutes = endHour * 60 + endMinute;
            
            // Handle overnight shifts (end time is next day)
            if (endMinutes < startMinutes) {
                endMinutes += 24 * 60;
            }
            
            // Calculate difference in hours
            const diffMinutes = endMinutes - startMinutes;
            const hours = diffMinutes / 60;
            
            // Update display and hidden input
            if (hours > 0 && hours <= 24) {
                document.getElementById('editCalculatedHours').value = hours.toFixed(2);
                document.getElementById('editHoursInput').value = hours.toFixed(2);
            } else {
                document.getElementById('editCalculatedHours').value = '0.00';
                document.getElementById('editHoursInput').value = '0';
            }
            
            // Update hidden fields with full datetime
            updateEditStartEndTimeHidden();
        }
        
        // Update hidden fields for create form
        function updateStartEndTimeHidden() {
            const entryDate = document.querySelector('input[name="EntryDate"]').value;
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            
            if (entryDate && startTime) {
                document.getElementById('startTimeHidden').value = entryDate + 'T' + startTime + ':00';
            }
            if (entryDate && endTime) {
                document.getElementById('endTimeHidden').value = entryDate + 'T' + endTime + ':00';
            }
        }
        
        // Update hidden fields for edit form
        function updateEditStartEndTimeHidden() {
            const entryDate = document.getElementById('editEntryDate').value;
            const startTime = document.getElementById('editStartTime').value;
            const endTime = document.getElementById('editEndTime').value;
            
            if (entryDate && startTime) {
                document.getElementById('editStartTimeHidden').value = entryDate + 'T' + startTime + ':00';
            }
            if (entryDate && endTime) {
                document.getElementById('editEndTimeHidden').value = entryDate + 'T' + endTime + ':00';
            }
        }
        
        // Edit entry function using event delegation
        document.addEventListener('click', function(e) {
            if (e.target.closest('.edit-entry-btn')) {
                const btn = e.target.closest('.edit-entry-btn');
                
                // Get data from button attributes
                const id = btn.dataset.id;
                const projectCode = btn.dataset.project;
                const workTypeCode = btn.dataset.worktype;
                const entryDate = btn.dataset.date;
                const startTime = btn.dataset.starttime;
                const endTime = btn.dataset.endtime;
                const hours = btn.dataset.hours;
                const notes = btn.dataset.notes;
                
                // Populate the edit form
                document.getElementById('editEntryId').value = id;
                document.getElementById('editProjectCode').value = projectCode;
                document.getElementById('editWorkTypeCode').value = workTypeCode;
                document.getElementById('editEntryDate').value = entryDate;
                document.getElementById('editStartTime').value = startTime || '09:00';
                document.getElementById('editEndTime').value = endTime || '17:00';
                document.getElementById('editCalculatedHours').value = hours;
                document.getElementById('editHoursInput').value = hours;
                document.getElementById('editNotes').value = notes || '';
                
                // Update hidden datetime fields
                updateEditStartEndTimeHidden();
                
                // Show the modal
                var editModal = new bootstrap.Modal(document.getElementById('editEntryModal'));
                editModal.show();
            }
        });
        
        // Add event listeners for create form
        document.getElementById('startTime').addEventListener('change', calculateHours);
        document.getElementById('endTime').addEventListener('change', calculateHours);
        document.querySelector('input[name="EntryDate"]').addEventListener('change', updateStartEndTimeHidden);
        
        // Add event listeners for edit form
        document.getElementById('editStartTime').addEventListener('change', calculateEditHours);
